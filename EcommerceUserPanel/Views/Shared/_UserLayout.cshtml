@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Template.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
<style>
    .crt{
        margin-left:50px;
    }
    .user {
     
        margin-right: 55px;
    }
</style>
</head>
    
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" asp-controller="Home" asp-action="HomePage"
           6>Shopping Mania</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Home" asp-action="HomePage">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="#"></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                    <div class="dropdown-menu" aria-labelledby="dropdown01">
                        <a class="dropdown-item" asp-controller="ProductCategory" asp-action="Index">Categories</a>

                    </div>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                &nbsp;&nbsp;&nbsp;
                <a asp-controller="cart" asp-action="Index"><i class="fa fa-shopping-cart" style="font-size:25px;color:white;" aria-hidden="true"></i><span class="aa-cart-notify"> @Context.Session.GetString("cartitem")</span></a>
                &nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;

                @if (Context.Session.GetString("Logout") == null)
                {
                    <a class="btn btn-secondary" asp-action="Login" asp-controller="Customer">Login</a>
                }
                else
                {

                    <div class="nav-item dropdown">
                        <a id="navbarDropdown1" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <i class="fa fa-user-circle user" style="font-size:25px;color:white;" aria-hidden="true">@Context.Session.GetString("uname")</i>

                        </a>

                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-controller="customer" asp-action="CustomerEdit">Edit Profile</a>
                            <a class="dropdown-item" asp-controller="customer" asp-action="Profile">My Profile</a>
                            <a class="dropdown-item" asp-controller="customer" asp-action="OrderHistory">My Orders</a>
                            <a class="dropdown-item" asp-controller="customer" asp-action="Password">Change Password</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-action="Logout" asp-controller="Customer">Logout</a>
                        </div>

                    </div>

                }
            </form>
        </div>
    </nav>
    <main role="main" class="container">

       
        <div class="starter-template">
            @RenderBody()
        </div>

    </main><!-- /.container -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>