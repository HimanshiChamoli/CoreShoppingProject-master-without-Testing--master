 @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}




<h2>Index</h2>
<table class="table table-hover">
    <tr>
        <th>Options</th>
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
    </tr>
    @foreach (var Item in ViewBag.cart)
    {
        <tr>
            <td><a asp-controller="cart" asp-action="Remove" asp-route-id="@Item.products.ProductId">Remove</a>
            <td>@Item.products.ProductId</td>
            <td>@Item.products.ProductName</td>
            <td><img src="@Item.products.ProductImage" width="60" /></td>
            <td>@Item.products.ProductPrice</td>
            <td><a class="btn btn-default" asp-controller="Cart" asp-action="Minus"asp-route-id="@Item.products.ProductId">-</a>@Item.Quantity <a class="btn btn-default" asp-controller="Cart" asp-action="Plus" asp-route-id="@Item.products.ProductId">+</a></td>
            <td>@(Item.products.ProductPrice * Item.Quantity)</td>
        </tr>
    }
    <tr>
        <td align="right" colspan="6">Sum</td>
        <td>
            @ViewBag.total
        </td>
    </tr>

</table>
<br />
<a asp-controller="Home" asp-action="Index">Continue Shopping</a>
<a asp-controller="Cart" asp-action="CheckOut">CheckOut</a>

<script src="~/js/sites.js"></script>