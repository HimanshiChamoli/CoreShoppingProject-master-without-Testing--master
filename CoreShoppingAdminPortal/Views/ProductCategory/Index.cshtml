@model IEnumerable<CoreShoppingAdminPortal.Models.ProductCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<h2>Index</h2>
<style>
    .btn1 {
        margin-right: 1000px;
        margin-top: -10px;
    }
</style>


&nbsp;&nbsp;
<a asp-controller="ProductCategory" asp-action="Create"><button type="button" class="btn btn-info btn1">Create</button></a>
&nbsp;&nbsp;
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ProductCategoryId)</th>
            <th>@Html.DisplayNameFor(model => model.CategoryName)</th>


            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {

            <tr>
                <td>@Html.DisplayFor(modelItem => category.ProductCategoryId)</td>
                <td>@Html.DisplayFor(modelItem => category.CategoryName)</td>



                <td>

                    <a class="btn btn-dark" asp-controller="ProductCategory" asp-action="Details"
                       asp-route-id="@category.ProductCategoryId">Details</a>|
                    <a class="btn btn-info" asp-controller="ProductCategory" asp-action="Edit"
                       asp-route-id="@category.ProductCategoryId">Edit</a>|
                    <a class="btn btn-danger" asp-controller="ProductCategory" asp-action="Delete"
                       asp-route-id="@category.ProductCategoryId">Delete</a>|

                </td>


            </tr>
        }
    </tbody>
</table>


<center>
    <input type="submit" value="submit" class="btn btn-success" />&nbsp;
    <button class="btn btn-success" asp-controller="ProductCategory" asp-action="Index">Back</button>
</center>
