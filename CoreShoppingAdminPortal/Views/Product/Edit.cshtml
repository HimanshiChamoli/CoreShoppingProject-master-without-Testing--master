@model CoreShoppingAdminPortal.Models.Product
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Details</h2>
<form>
    <div class="form-group row">
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductId">ProductId</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="ProductId">
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductName">ProductName</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="ProductName">
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductQty">ProductQty</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="ProductQty">
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductImage">ProductImage</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="ProductImage">
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductCategoryId">ProductCategoryId</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="ProductCategoryId" asp-items="ViewBag.Categories"></select>
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="VendorId">VendorId</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="VendorId" asp-items="ViewBag.Vendor"></select>
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="BrandId">BrandId</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="BrandId" asp-items="ViewBag.Brand"></select>
        </div>
        <br />
    </div>
    <center>
        <input type="submit" value="Edit" class="btn btn-success" />&nbsp;
        <button class="btn btn-success" asp-controller="Product" asp-action="Index">Back</button>
    </center>
</form>


