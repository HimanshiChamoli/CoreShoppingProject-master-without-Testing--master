@model CoreShoppingAdminPortal.Models.Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Product Details</h2>
<form asp-action="create" asp-controller="Product">
    <div class="form-group row">
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductName">ProductName</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Text" asp-for="ProductName">
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductQty">EmailId</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Email@example.com" asp-for="ProductQty">
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductPrice">ProductPrice</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Numeric" asp-for="ProductPrice">
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductImage">ProductImage</label>
        <div class="col-sm-10">
            <input type="image" class="form-control" placeholder="image" asp-for="ProductImage">
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductDescription">ProductDescription</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Text" asp-for="ProductDescription">
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="VendorId">VendorId</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Text" asp-for="VendorId">
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="ProductCategoryId">ProductCategoryId</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Text" asp-for="ProductCategoryId">
        </div>
        <label for="text" class="col-sm-2 col-form-label" asp-for="BrandId">BrandId</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="BrandId" asp-items="ViewBag.products2"></select>
        </div> <br />

    </div>
    <center>
        <input type="submit" value="submit" class="btn btn-success" />&nbsp;
        <button class="btn btn-success" asp-controller="Product" asp-action="Index">Back</button>
    </center>

    <br />
</form>


